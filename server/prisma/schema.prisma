model WebRTCSession {
  id            Int         @id @default(autoincrement())
  appointmentId Int         @unique
  roomId        String      @unique
  isActive      Boolean     @default(true)
  createdBy     Int
  Admin         Account     @relation("WebRTCRoomCreator", fields: [createdBy], references: [id])
  createdAt     DateTime    @default(now())
  endedAt       DateTime?
  sessionType   SessionType @default(VIDEO)
  callDuration  Int?
  CallLog       CallLog[]
  Appointment   Appointment @relation(fields: [appointmentId], references: [id])
}

model ChatMessage {
  id             Int         @id @default(autoincrement())
  appointmentId  Int
  senderId       Int
  receiverId     Int?
  messageContent String
  timestamp      DateTime    @default(now())
  isRead         Boolean     @default(false)
  messageType    MessageType @default(TEXT)
  mediaUrl       String?

  // Relationships
  Appointment Appointment @relation(fields: [appointmentId], references: [id])
  Sender      Account     @relation(name: "SentMessages", fields: [senderId], references: [id])
  Receiver    Account?    @relation(name: "ReceivedMessages", fields: [receiverId], references: [id])

  @@index([appointmentId])
  @@index([senderId])
  @@index([receiverId])
}

model Notification {
  id              Int              @id @default(autoincrement())
  userId          Int
  type            NotificationType @default(GENERAL)
  message         String
  isRead          Boolean          @default(false)
  createdAt       DateTime         @default(now())
  relatedEntityId Int?

  // Relationship
  UserAccount Account @relation(fields: [userId], references: [id])

  @@index([userId])
}

model CallLog {
  id              Int         @id @default(autoincrement())
  appointmentId   Int
  callerId        Int
  receiverId      Int
  callType        SessionType
  startTime       DateTime    @default(now())
  endTime         DateTime?
  durationMinutes Int?
  status          CallStatus  @default(COMPLETED)
  webRTCSessionId Int?

  // Relationships
  Appointment   Appointment    @relation(fields: [appointmentId], references: [id])
  Caller        Account        @relation(name: "InitiatedCalls", fields: [callerId], references: [id])
  Receiver      Account        @relation(name: "ReceivedCalls", fields: [receiverId], references: [id])
  WebRTCSession WebRTCSession? @relation(fields: [webRTCSessionId], references: [id])

  @@index([appointmentId])
  @@index([callerId])
  @@index([receiverId])
}

model WebhookLog {
  id         Int      @id @default(autoincrement())
  paymentId  Int
  rawData    Json
  receivedAt DateTime @default(now())
  Payment    Payment  @relation(fields: [paymentId], references: [id])

  @@index([paymentId], map: "WebhookLog_paymentId_fkey")
}

enum Account_role {
  PATIENT
  DOCTOR
  ADMIN
}

enum Payment_status {
  PENDING
  COMPLETED
  FAILED
}

enum Appointment_status {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum SessionType {
  VIDEO
  AUDIO
  CHAT
}

enum MessageType {
  TEXT
  IMAGE
  FILE
  SYSTEM
}

enum CallStatus {
  COMPLETED
  MISSED
  FAILED
  ONGOING
  SCHEDULED
}

enum NotificationType {
  GENERAL
  CALL_STARTED
  NEW_MESSAGE
  APPOINTMENT_REMINDER
  APPOINTMENT_CONFIRMED
  APPOINTMENT_CANCELLED
}
